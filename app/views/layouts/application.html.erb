<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<script type="text/javascript">

$(document).ready(function(){
  setTimeout(function(){
    $('.notice').remove();
  }, 5000);
 })

</script>
<%= yield %>



</body>
</html>
