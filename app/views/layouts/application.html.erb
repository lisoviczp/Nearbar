<!DOCTYPE html>
<html>
<head>
  <title>Barshop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

<!-- <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1"> -->
<nav class="navbar navbar-default">
    <!-- Brand and toggle get grouped for better mobile display -->

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
        <li><a href="/establishments">Establishments</a></li>
        <li><a href="/deals">Deals</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Favorites </a>
            <ul class="dropdown-menu">
              <li class=""><a href="/favorites">Favorite Places</a></li>
              <li class=""><a href="/favorite_deals">Favorite Deals</a></li>
            </ul>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">New <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
            <ul class="dropdown-menu">
              <% if current_user.establishments.size > 0 %>
                <li>
                  <%= link_to ('New Deal').html_safe, new_deal_path %>
                </li>
              <% end %>
              <li>
                <%= link_to ('New Establishment').html_safe, new_establishment_path %>
              </li>
            </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"><%= current_user.username %></a>
            <ul class="dropdown-menu">
              <li class=""><a href="/your_deals">Your Deals </a></li>
              <li class=""><a href="/your_establishments">Your Establishments </a></li>
            </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Account</a>
            <ul class="dropdown-menu">
              <li> <%= link_to('Info', info_page_path) %> </li>
              <li>
                <%= link_to('Edit Account', edit_user_path(current_user)) %>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %>
              </li>
            </ul>
        </li>
        <% else %>
          <li>
            <%= link_to('Info', info_page_path)  %>
          </li>
          <li>
            <%= link_to('Sign In', new_user_session_path)  %>
          </li>
        <% end %>
      </ul>


    </div><!-- /.navbar-collapse -->
</nav>
<!-- </div> -->

<link href='https://fonts.googleapis.com/css?family=Indie+Flower|Pacifico' rel='stylesheet' type='text/css'>

