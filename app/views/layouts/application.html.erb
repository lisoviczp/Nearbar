<nav class="navbar navbar-default">
    <!-- Brand and toggle get grouped for better mobile display -->

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Establishments</a>
              <ul class="dropdown-menu">
                <li><a href="/establishments">Establishments</a></li>
                <li><a href="/your_establishments">Your Establishments</a></li>
              </ul>
          </li>
        <li><a href="/deals">Deals</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Favorites </a>
            <ul class="dropdown-menu">
              <li class=""><a href="/favorites">Favorite Places</a></li>
              <li class=""><a href="/favorite_deals">Favorite Deals</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to ('New Establishment <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>').html_safe, new_establishment_path %>
          </li>

          <li>
            <%= link_to ('New Deal <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>').html_safe, new_deal_path %>
          </li>
          
          <li class="dropdown">            
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Account</a>
              <ul class="dropdown-menu">
                <li> <%= link_to('Info', info_page_path) %> </li>
                <li class=""><a href="/your_establishments">Your Establishments </a></li>
                <li class=""><a href="/your_establishments">Your Deals </a></li>
                <li class=""><a href="/favorite_deals">Favorite Deals</a></li>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %>        
                </li>
              </ul>
          </li>
        <% else %>
          <li>
            <%= link_to('Info', info_page_path)  %>  
          </li>
          <li>
            <%= link_to('Sign In', new_user_session_path)  %>  
          </li>
        <% end %>
      </ul>

      
    </div><!-- /.navbar-collapse -->
</nav>
<!-- </div> -->

