<p id="notice"><%= notice %></p>

<div class="show-establishment-box">
  <h2 class="important-header" id="center-text" style="">Your Favorite Establishments </h2>
<!-- <h3 id="center-text"> You will receive all deals & updates from these</h3> -->
</div>

<div class="my-table-container">
  <% @establishments.each do |establishment| %>
    <div class="featurette">
        <h3 class="featurette-heading" style="color:red;"> 
          <span id="bold-large-link"><%= link_to establishment.name, establishment %></span>
          <% if @current_user.favorites.include? establishment %> 
            <span id="bold-large-link-glyph">
              <%= link_to ('<span style="" class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>').html_safe,   favorite_establishment_path(establishment, type: "unfavorite"), method: :put %>
                <!-- <span style="" class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> -->
            </span>
          <% else %>
            <span id="bold-large-link-glyph">
              <%= link_to ('<span style="" class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>').html_safe,   favorite_establishment_path(establishment, type: "favorite"), method: :put, style: 'color:grey;' %>
                <!-- <span style="" class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> -->
            </span>
          <% end %>
        </h3>
          <p>
           <%= establishment.address %>
           <%= establishment.city %>
           <%= establishment.state %>
           <%= establishment.zipcode %> </br>
           <%= establishment.total_active_deals %> active deals </br>

          </p> </br>
        <div class="field">
          <p>
           <%= establishment.key %>
          </p>


          <!-- <% link_to "unfavorite",   favorite_establishment_path(establishment, type: "unfavorite"), method: :put %> -->

<!--     
        <td><% link_to 'Edit', edit_establishment_path(establishment) %></td>
        <td><% link_to 'Destroy', establishment, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </div>
        <hr class="featurette-divider"/>
    </div>
  <% end %>
</div>


<br>